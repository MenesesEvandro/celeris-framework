{
    "name": "celeris/framework",
    "description": "A modular, high-performance PHP framework for building modern web applications and scalable APIs. Lightweight PHP, heavyweight perfomance.",
    "type": "library",
    "keywords": [
        "php",
        "framework",
        "api",
        "psr",
        "psr-7",
        "psr-11",
        "psr-15",
        "performance",
        "lightweight",
        "microframework"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Evandro Meneses Carneiro",
            "email": "MenesesEvandro@users.noreply.github.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "psr/container": "^2.0",
        "psr/http-message": "^1.0 || ^2.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-factory": "^1.0",
        "nikic/fast-route": "^1.3",
        "php-di/php-di": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "nyholm/psr7": "^1.8",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.50"
    },
    "autoload": {
        "psr-4": {
            "Celeris\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Celeris\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src --level max",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run"
    }
}